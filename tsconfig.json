{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "noImplicitAny": false,
      "sourceMap": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "rootDir": "src",
      "outDir": "dist",
      "declaration": true,
      "moduleResolution": "node",
      "noUnusedLocals": true,
      "removeComments": true
  },
  "exclude": [
      "node_modules",
      "dist/*.d.ts"
  ]
}